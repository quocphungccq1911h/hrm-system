<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrm.auth.mapper.ext.ExtUserMapper">
    <sql id="Base_Column_List">
        id, username, password, email, employee_id, is_active, created_at
    </sql>
    <select id="findByUsername" parameterType="java.lang.String" resultMap="com.hrm.auth.mapper.UserMapper.BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from users
        where username = #{username, jdbcType=VARCHAR}
    </select>
</mapper>
